{
  "name": "k-msg-workspace",
  "version": "0.1.1",
  "private": true,
  "description": "K-Message: Korean Multi-Channel Messaging Platform",
  "packageManager": "bun@1.3.8",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun run build:all",
    "build:all": "bun run build:core && bun run build:provider && bun run build:template && bun run build:messaging && bun run build:analytics && bun run build:channel && bun run build:webhook && bun run build:k-msg",
    "build:core": "cd packages/core && bun run build",
    "build:messaging": "cd packages/messaging && bun run build",
    "build:template": "cd packages/template && bun run build",
    "build:webhook": "cd packages/webhook && bun run build",
    "build:analytics": "cd packages/analytics && bun run build",
    "build:channel": "cd packages/channel && bun run build",
    "build:provider": "cd packages/provider && bun run build",
    "build:k-msg": "cd packages/k-msg && bun run build",
    "dev": "bun run --filter='./packages/*' dev",
    "test": "bun run test:unit",
    "test:unit": "bun run --filter='./packages/*' test:unit",
    "test:integration": "bun run --filter='./packages/*' test:integration",
    "test:e2e": "bun run --filter='./packages/*' test:e2e",
    "test:all": "bun run test:unit && bun run test:integration",
    "test:coverage": "bun run --filter='./packages/*' test:coverage",
    "test:watch": "bun run --filter='./packages/*' test:watch",
    "typecheck": "bun run typecheck:all",
    "typecheck:all": "bun run --cwd packages/core build:types && bun run --cwd packages/provider build:types && bun run --cwd packages/template build:types && bun run --cwd packages/messaging build:types && bun run --filter='./packages/*' typecheck",
    "lint": "bun x @biomejs/biome lint .",
    "format": "bun x @biomejs/biome format --write .",
    "check": "bun x @biomejs/biome check .",
    "clean": "bun run --filter='./packages/*' clean",
    "prepublishOnly": "bun run build",
    "cli": "bun --cwd apps/cli --",
    "deps:outdated:core": "for d in . apps/cli packages/*; do [ -f \"$d/package.json\" ] || continue; echo \"\\n===== $d =====\"; (cd \"$d\" && bun outdated || true); done",
    "deps:outdated:examples": "for d in examples/*; do [ -f \"$d/package.json\" ] || continue; echo \"\\n===== $d =====\"; (cd \"$d\" && bun outdated || true); done",
    "version:patch": "bun pm version patch",
    "version:minor": "bun pm version minor",
    "version:major": "bun pm version major",
    "pack:all": "bun run --filter './packages/*' pack",
    "pack:dry": "bun run --filter './packages/*' pack --dry-run",
    "publish:all": "bun run --filter './packages/*' publish --access public",
    "publish:beta": "bun run --filter './packages/*' publish --tag beta --access public",
    "release": "./scripts/release.sh",
    "release:patch": "bun run version:patch && bun install && bun run build:all && bun run publish:all",
    "release:minor": "bun run version:minor && bun install && bun run build:all && bun run publish:all",
    "release:major": "bun run version:major && bun install && bun run build:all && bun run publish:all"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@types/node": "catalog:",
    "typescript": "catalog:"
  },
  "keywords": [
    "korea",
    "messaging",
    "alimtalk",
    "sms",
    "lms",
    "kakaotalk",
    "friendtalk",
    "multi-channel",
    "notification",
    "typescript",
    "monorepo"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k-otp/k-msg.git"
  },
  "homepage": "https://github.com/k-otp/k-msg",
  "bugs": {
    "url": "https://github.com/k-otp/k-msg/issues"
  },
  "license": "MIT",
  "author": "imjlk",
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "catalog": {
      "typescript": "^5.7.2",
      "@types/bun": "^1.3.9",
      "@types/node": "^22.0.0",
      "zod": "^4.0.14",
      "hono": "^4.8.10",
      "@hono/zod-validator": "^0.4.1",
      "honox": "^0.1.43",
      "vite": "^6.3.5",
      "@cloudflare/workers-types": "^4.20250131.0",
      "wrangler": "^4.4.0"
    }
  }
}
