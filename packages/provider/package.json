{
  "name": "@k-msg/provider",
  "version": "0.16.0",
  "packageManager": "bun@1.3.8",
  "type": "module",
  "description": "Complete provider system with adapters and implementations for K-Message platform",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./aligo": {
      "types": "./dist/aligo/index.d.ts",
      "import": "./dist/aligo/index.mjs",
      "require": "./dist/aligo/index.js"
    },
    "./iwinv": {
      "types": "./dist/iwinv/index.d.ts",
      "import": "./dist/iwinv/index.mjs",
      "require": "./dist/iwinv/index.js"
    },
    "./solapi": {
      "types": "./dist/solapi/index.d.ts",
      "import": "./dist/solapi/index.mjs",
      "require": "./dist/solapi/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun run clean && bun run build:esm && bun run build:cjs && bun run build:types",
    "build:esm": "bun build ./src/index.ts ./src/aligo/index.ts ./src/iwinv/index.ts ./src/solapi/index.ts --outdir ./dist --format esm --minify --sourcemap --entry-naming '[dir]/[name].mjs' --external 'bun:test' --external 'solapi'",
    "build:cjs": "bun build ./src/index.ts ./src/aligo/index.ts ./src/iwinv/index.ts ./src/solapi/index.ts --outdir ./dist --format cjs --minify --sourcemap --entry-naming '[dir]/[name].js' --external 'bun:test' --external 'solapi'",
    "build:types": "tsc",
    "dev": "tsc --watch",
    "test": "bun run test:unit",
    "test:unit": "bun test --testPathPattern='.*\\.test\\.(ts|js)$' --testTimeout=5000",
    "test:integration": "bun test --testPathPattern='.*\\.integration\\.(ts|js)$' --testTimeout=10000",
    "test:e2e": "bun test --testPathPattern='.*\\.e2e\\.(ts|js)$' --testTimeout=30000",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "pack": "bun pm pack",
    "publish": "bun publish --access public"
  },
  "dependencies": {
    "@k-msg/core": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "solapi": "^5.5.4",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "solapi": "^5.5.4"
  },
  "peerDependenciesMeta": {
    "solapi": {
      "optional": true
    }
  },
  "keywords": [
    "provider",
    "plugin",
    "architecture",
    "messaging",
    "k-message",
    "iwinv",
    "alimtalk",
    "adapter"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k-otp/k-msg.git"
  },
  "homepage": "https://github.com/k-otp/k-msg",
  "bugs": {
    "url": "https://github.com/k-otp/k-msg/issues"
  },
  "author": "imjlk",
  "license": "MIT"
}
