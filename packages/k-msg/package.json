{
  "name": "k-msg",
  "version": "0.17.0",
  "packageManager": "bun@1.3.8",
  "description": "K-Message: Korean Multi-Channel Messaging Platform - Unified Package",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./adapters/bun": {
      "types": "./dist/adapters/bun/index.d.ts",
      "import": "./dist/adapters/bun/index.mjs",
      "require": "./dist/adapters/bun/index.js"
    },
    "./adapters/node": {
      "types": "./dist/adapters/node/index.d.ts",
      "import": "./dist/adapters/node/index.mjs",
      "require": "./dist/adapters/node/index.js"
    },
    "./adapters/cloudflare": {
      "types": "./dist/adapters/cloudflare/index.d.ts",
      "import": "./dist/adapters/cloudflare/index.mjs",
      "require": "./dist/adapters/cloudflare/index.js"
    }
  },
  "scripts": {
    "build": "bun run clean && bun run build:esm && bun run build:cjs && bun run build:types",
    "build:esm": "bun build ./src/index.ts ./src/adapters/bun/index.ts ./src/adapters/node/index.ts ./src/adapters/cloudflare/index.ts --outdir ./dist --format esm --minify --sourcemap --entry-naming '[dir]/[name].mjs' --external 'bun:test' --external '@k-msg/*'",
    "build:cjs": "bun build ./src/index.ts ./src/adapters/bun/index.ts ./src/adapters/node/index.ts ./src/adapters/cloudflare/index.ts --outdir ./dist --format cjs --minify --sourcemap --entry-naming '[dir]/[name].js' --external 'bun:test' --external '@k-msg/*'",
    "build:types": "tsc",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "test:unit": "bun test --testPathPattern='.*\\.test\\.(ts|js)$' --testTimeout=5000",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "pack": "bun pm pack",
    "publish": "bun publish --access public"
  },
  "dependencies": {
    "@k-msg/messaging": "workspace:*"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "@types/bun": "catalog:"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "typescript": "^5"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "korea",
    "messaging",
    "alimtalk",
    "sms",
    "lms",
    "kakaotalk",
    "friendtalk",
    "multi-channel",
    "notification",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k-otp/k-msg.git"
  },
  "homepage": "https://github.com/k-otp/k-msg",
  "bugs": {
    "url": "https://github.com/k-otp/k-msg/issues"
  },
  "license": "MIT",
  "author": "imjlk"
}
